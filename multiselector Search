filtersTranspoter = (e, inputType) => {
    const value = e;
    console.log("inputType", inputType);
  
    // Clear any previous timer for this input type
    if (this.debounceTimers && this.debounceTimers[inputType]) {
      clearTimeout(this.debounceTimers[inputType]);
    } else {
      this.debounceTimers = {}; // initialize if not exist
    }
  
    if (value?.length > 1) {
      // Set new timeout
      this.debounceTimers[inputType] = setTimeout(() => {
        switch (inputType) {
          case "source":
          case "destination":
            this.getAllsourceDest(value);
            break;
          case "transporter":
            this.getAllTransporter(value);
            break;
          case "vehicleType":
            this.getAllVehicleType(value);
            break;
          case "route":
            this.getAllRoute(value);
            break;
          default:
            console.warn("Unknown inputType:", inputType);
        }
      }, 1000); 
    }
  };
  

